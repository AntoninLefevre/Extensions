{
    "manifest_version": 2,

    "name": "Hello world",
    "description": "Browser action extension.",
    "version": "2.0",

    "permissions": ["unlimitedStorage"],
    "options_page": "pageopt.html",

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_popup" : "popup.html"
    }
}
